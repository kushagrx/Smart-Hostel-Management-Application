rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Check if the user has a custom claim 'admin' OR if their email is the hardcoded admin email
      // Note: For production, Custom Claims are safer, but reading from the user doc is easier for now.
      return isAuthenticated() && 
        (request.auth.token.email == 'shaswatrastogi91@gmail.com' || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    // Users: Users can read/write their own profile. Admins can do everything.
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Allocations: Admins can write. Public read required for login (finding by personal email query).
    match /allocations/{email} {
      allow read: if true; 
      allow write: if isAdmin();
    }

    // Complaints: Students can read/write their own. Admins can read/write all.
    match /complaints/{complaintId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isAuthenticated() && (resource.data.studentEmail == request.auth.token.email || isAdmin());
    }

    // Leaves: Students can read/write their own. Admins can read/write all.
    match /leaves/{leaveId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isAuthenticated() && (resource.data.studentEmail == request.auth.token.email || isAdmin());
    }

    // Notices: Admins write. All authenticated users read.
    match /notices/{noticeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Rooms: Admins write. All authenticated users read.
    match /rooms/{roomId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Bus Timings: Admins write. All authenticated users read.
    match /busTimings/{timingId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Mess Menu: Admins write. All authenticated users read.
    match /messMenu/{dayId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Mess Settings: Admins write. All authenticated users read.
    match /messSettings/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Default Fallback (Deny everything else)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
